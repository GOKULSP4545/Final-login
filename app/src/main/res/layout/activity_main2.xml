<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:id="@+id/home">

    <TextView
        android:id="@+id/AlreadyYouHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already you Have an account?"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_below="@id/btnRegistration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
       />

    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn"
        android:textStyle="italic"
        android:text="Register"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="61dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="40dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputName1"
        android:layout_width="243dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter a Name"
        android:layout_below="@id/textView"
        >

        <EditText
            android:id="@+id/inputName"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail1"
        android:layout_width="243dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter a Email"
        android:layout_below="@id/inputName1"
        >

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@id/inputPassWord1"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputEmail1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:hint="Enter a PassWord"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/inputPassWord"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>


    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/PhoneNo"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputConformPassWord1"
        android:layout_centerHorizontal="true"
        android:hint="phone Number"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        ></EditText>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputConformPassWord1"
        android:layout_width="247dp"
        android:layout_height="81dp"
        android:layout_below="@id/inputPassWord1"
        android:layout_centerHorizontal="true"
        android:hint="Conform Passowrd"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/inputConformPassWord"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pp"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mm"
        android:layout_below="@id/inputEmail1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ll"
        android:layout_below="@id/inputName1"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mm"
        android:layout_below="@id/inputPassWord1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
       ></ImageView>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/phone"
        android:layout_below="@id/inputConformPassWord1"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="14dp"

        ></ImageView>



</RelativeLayout>