<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nhm"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/Login"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:text="Do you have an account?"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sing Up"
        android:textColor="@color/red"
        android:textSize="17dp"
        android:layout_below="@id/Login"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        android:textStyle="italic"
        ></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail1"
        android:layout_width="243dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:hint="Enter a Name"
        android:layout_below="@id/textView"
        >

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPassWord1"
        android:layout_width="243dp"
        android:layout_height="71dp"
        android:layout_below="@id/inputEmail1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Enter a PassWord"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/inputPassWord"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>


    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mm"
        android:layout_below="@id/emailimage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        ></ImageView>

    <ImageView
        android:id="@+id/emailimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ll"
        android:layout_below="@id/textView"
        android:layout_marginTop="89dp"
        android:layout_marginLeft="10dp"
        ></ImageView>

    <Button
        android:id="@+id/Login"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:background="@drawable/btn"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_below="@id/inputPassWord1"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
         />

    <TextView
        android:id="@+id/Forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot passWord !"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:layout_below="@id/inputPassWord1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="170dp"
        android:textStyle="italic"
       ></TextView>

    <ImageButton
        android:id="@+id/signGoogle"
        android:layout_width="272dp"
        android:layout_height="38dp"
        android:background="@drawable/kkl"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        ></ImageButton>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputPassWord1"
        android:layout_marginTop="10dp"


        ></ProgressBar>


</RelativeLayout>